{
    "languageserver": {
        "bash": {
            "command": "bash-language-server",
            "args": ["start"],
            "filetypes": ["sh"],
            "ignoredRootPaths": ["~"]
        },
        "fortran": {
            "command": "fortls",
            "filetypes": ["fortran"],
            "rootPatterns": [".fortls", ".git/"]
        }
    },
    "lsp-wl.wolframExecutablePath": "math",
    "lsp-wl.wolframLanguageServerPath": "@HOME@/scratch/lsp-wl/"
}
